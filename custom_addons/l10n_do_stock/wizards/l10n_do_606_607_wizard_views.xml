<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form del Wizard -->
    <record id="view_l10n_do_606_607_wizard_form" model="ir.ui.view">
        <field name="name">l10n.do.606.607.wizard.form</field>
        <field name="model">l10n.do.606.607.wizard</field>
        <field name="arch" type="xml">
            <form string="Reportes 606/607 DGII">
                <group invisible="context.get('show_download', False)">
                    <group>
                        <field name="report_type"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                
                <group invisible="not excel_file">
                    <field name="excel_file" filename="excel_filename" invisible="1"/>
                    <field name="excel_filename" invisible="1"/>
                    <div class="alert alert-success" role="alert">
                        <h4>✅ Reporte <field name="report_type" readonly="1" nolabel="1" invisible="1"/> Generado</h4>
                        <p>El archivo Excel está listo para presentar a DGII.</p>
                    </div>
                </group>
                
                <footer>
                    <button name="action_generate_report" string="Generar Reporte" type="object" 
                            class="btn-primary" invisible="excel_file"/>
                    <button name="action_download_excel" string="Descargar Excel" type="object" 
                            class="btn-success" invisible="not excel_file"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_l10n_do_606_607_wizard" model="ir.actions.act_window">
        <field name="name">Reportes 606/607 DGII</field>
        <field name="res_model">l10n.do.606.607.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

