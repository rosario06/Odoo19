<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form del Wizard -->
    <record id="view_l10n_do_kardex_wizard_form" model="ir.ui.view">
        <field name="name">l10n.do.kardex.wizard.form</field>
        <field name="model">l10n.do.kardex.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Kardex">
                <group invisible="context.get('show_download', False)">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="report_format"/>
                        <field name="valuation_method"/>
                        <field name="show_zero_qty"/>
                    </group>
                </group>
                
                <group invisible="context.get('show_download', False)">
                    <group string="Filtros">
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}" 
                               placeholder="Todos los productos"/>
                        <field name="location_ids" widget="many2many_tags" options="{'no_create': True}"
                               placeholder="Todas las ubicaciones"/>
                    </group>
                </group>
                
                <group invisible="not excel_file">
                    <field name="excel_file" filename="excel_filename" invisible="1"/>
                    <field name="excel_filename" invisible="1"/>
                    <div class="alert alert-success" role="alert">
                        <h4>✅ Kardex Generado Exitosamente</h4>
                        <p>El archivo Excel está listo para descargar.</p>
                    </div>
                </group>
                
                <footer>
                    <button name="action_generate_kardex" string="Generar Kardex" type="object" 
                            class="btn-primary" invisible="excel_file"/>
                    <button name="action_download_excel" string="Descargar Excel" type="object" 
                            class="btn-success" invisible="not excel_file"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_l10n_do_kardex_wizard" model="ir.actions.act_window">
        <field name="name">Generar Kardex</field>
        <field name="res_model">l10n.do.kardex.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

