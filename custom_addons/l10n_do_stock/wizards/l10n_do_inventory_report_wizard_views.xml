<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form del Wizard -->
    <record id="view_l10n_do_inventory_report_wizard_form" model="ir.ui.view">
        <field name="name">l10n.do.inventory.report.wizard.form</field>
        <field name="model">l10n.do.inventory.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Inventario DGII">
                <group invisible="context.get('show_download', False)">
                    <group>
                        <field name="date"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="valuation"/>
                        <field name="include_zero_qty"/>
                    </group>
                </group>
                
                <group invisible="context.get('show_download', False)">
                    <group string="Filtros">
                        <field name="location_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="category_ids" widget="many2many_tags" options="{'no_create': True}"
                               placeholder="Todas las categorías"/>
                    </group>
                </group>
                
                <group invisible="not excel_file">
                    <field name="excel_file" filename="excel_filename" invisible="1"/>
                    <field name="excel_filename" invisible="1"/>
                    <div class="alert alert-success" role="alert">
                        <h4>✅ Reporte de Inventario Generado</h4>
                        <p>El archivo Excel está listo para descargar según formato DGII.</p>
                    </div>
                </group>
                
                <footer>
                    <button name="action_generate_report" string="Generar Reporte" type="object" 
                            class="btn-primary" invisible="excel_file"/>
                    <button name="action_download_excel" string="Descargar Excel" type="object" 
                            class="btn-success" invisible="not excel_file"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_l10n_do_inventory_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Inventario DGII</field>
        <field name="res_model">l10n.do.inventory.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

