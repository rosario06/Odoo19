<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista List de Mantenimientos -->
    <record id="view_account_asset_maintenance_list" model="ir.ui.view">
        <field name="name">account.asset.maintenance.list</field>
        <field name="model">account.asset.maintenance</field>
        <field name="arch" type="xml">
            <list string="Mantenimientos">
                <field name="maintenance_date"/>
                <field name="asset_id"/>
                <field name="name"/>
                <field name="maintenance_type"/>
                <field name="cost"/>
                <field name="provider_id"/>
                <field name="responsible_id"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state == 'scheduled'" decoration-info="state == 'in_progress'"/>
            </list>
        </field>
    </record>

    <!-- Vista Form de Mantenimientos -->
    <record id="view_account_asset_maintenance_form" model="ir.ui.view">
        <field name="name">account.asset.maintenance.form</field>
        <field name="model">account.asset.maintenance</field>
        <field name="arch" type="xml">
            <form string="Mantenimiento">
                <header>
                    <button name="action_start" string="Iniciar" type="object" class="oe_highlight" invisible="state != 'scheduled'"/>
                    <button name="action_done" string="Completar" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancelar" type="object" invisible="state in ['done', 'cancelled']"/>
                    <button name="action_reschedule" string="Reprogramar" type="object" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="scheduled,in_progress,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="asset_id"/>
                            <field name="name"/>
                            <field name="maintenance_type"/>
                            <field name="maintenance_date"/>
                            <field name="next_maintenance_date"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="cost" widget="monetary"/>
                            <field name="provider_id"/>
                            <field name="invoice_id"/>
                            <field name="responsible_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notas" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n -->
    <record id="action_account_asset_maintenance" model="ir.actions.act_window">
        <field name="name">Mantenimientos</field>
        <field name="res_model">account.asset.maintenance</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>

