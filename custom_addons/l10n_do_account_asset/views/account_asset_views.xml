<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form de Activo Fijo -->
    <record id="view_account_asset_form" model="ir.ui.view">
        <field name="name">account.asset.form</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <form string="Activo Fijo" class="o_xxl_form_view">
                <header>
                    <button name="action_running" string="Activar" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_close" string="Cerrar" type="object" invisible="state not in ['running', 'draft']"/>
                    <button name="action_draft" string="Volver a Borrador" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,close"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_depreciation_lines" type="object" class="oe_stat_button" icon="fa-line-chart">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="depreciated_value" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </span>
                                <span class="o_stat_text">Depreciado</span>
                            </div>
                        </button>
                        <button name="action_view_maintenances" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="maintenance_count" widget="statinfo" string="Mantenimientos"/>
                        </button>
                        <button name="action_view_attachments" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="attachment_count" widget="statinfo" string="Documentos"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Ej: Vehículo Toyota Corolla 2024"/>
                        </h1>
                        <div>
                            <field name="code" readonly="1"/>
                        </div>
                    </div>
                    <group>
                        <group string="Información Básica">
                            <field name="category_id" options="{'no_create': True}"/>
                            <field name="acquisition_date"/>
                            <field name="first_depreciation_date"/>
                            <field name="location"/>
                            <field name="responsible_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Valores">
                            <field name="currency_id" invisible="1"/>
                            <field name="purchase_value" options="{'currency_field': 'currency_id'}"/>
                            <field name="salvage_value" options="{'currency_field': 'currency_id'}"/>
                            <field name="depreciation_value" options="{'currency_field': 'currency_id'}"/>
                            <field name="book_value" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Depreciación" name="depreciation">
                            <group string="Configuración de Depreciación">
                                <group>
                                    <field name="depreciation_rate" readonly="1"/>
                                    <field name="depreciation_method" readonly="1"/>
                                </group>
                                <group>
                                    <field name="account_asset_id" readonly="1" options="{'no_create': True}"/>
                                    <field name="account_depreciation_id" readonly="1" options="{'no_create': True}"/>
                                    <field name="journal_id" readonly="1" options="{'no_create': True}"/>
                                </group>
                            </group>
                            <separator string="Líneas de Depreciación"/>
                            <field name="depreciation_line_ids" nolabel="1">
                                <list string="Líneas de Depreciación" create="0" delete="0">
                                    <field name="depreciation_date"/>
                                    <field name="name"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Información de Compra" name="purchase_info">
                            <group>
                                <group>
                                    <field name="invoice_id" options="{'no_create': True}"/>
                                    <field name="l10n_do_ncf"/>
                                    <field name="partner_id"/>
                                </group>
                                <group>
                                    <field name="serial_number"/>
                                    <field name="manufacturer"/>
                                    <field name="model"/>
                                </group>
                            </group>
                        </page>
                        <page string="Garantía" name="warranty">
                            <group>
                                <field name="warranty_start_date"/>
                                <field name="warranty_end_date"/>
                                <field name="warranty_active"/>
                            </group>
                        </page>
                        <page string="Mantenimientos" name="maintenance">
                            <group>
                                <field name="next_maintenance_date"/>
                            </group>
                            <field name="maintenance_ids" nolabel="1">
                                <list string="Mantenimientos">
                                    <field name="maintenance_date"/>
                                    <field name="name"/>
                                    <field name="maintenance_type"/>
                                    <field name="cost"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Asientos Contables" name="accounting">
                            <field name="move_ids" nolabel="1" readonly="1">
                                <list string="Asientos" create="0" edit="0" delete="0">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="ref"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="note" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista List de Activos -->
    <record id="view_account_asset_list" model="ir.ui.view">
        <field name="name">account.asset.list</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <list string="Activos Fijos">
                <field name="code"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="acquisition_date"/>
                <field name="purchase_value"/>
                <field name="depreciated_value"/>
                <field name="book_value"/>
                <field name="state" widget="badge" decoration-success="state == 'running'" decoration-info="state == 'draft'" decoration-muted="state in ['close', 'disposed']"/>
            </list>
        </field>
    </record>

    <!-- Vista Kanban de Activos -->
    <record id="view_account_asset_kanban" model="ir.ui.view">
        <field name="name">account.asset.kanban</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="purchase_value"/>
                <field name="book_value"/>
                <field name="state"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('account.asset', 'image', record.id.raw_value)" alt="Asset"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="code"/> - <field name="category_id"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span>Valor: <field name="purchase_value" widget="monetary"/></span><br/>
                                    <span>En libros: <field name="book_value" widget="monetary"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <field name="state" widget="label"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_account_asset_search" model="ir.ui.view">
        <field name="name">account.asset.search</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <search string="Buscar Activos">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="responsible_id"/>
                <filter string="En Uso" name="running" domain="[('state', '=', 'running')]"/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Cerrados" name="close" domain="[('state', '=', 'close')]"/>
                <separator/>
                <filter string="Categoría" name="group_category" context="{'group_by': 'category_id'}"/>
                <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                <filter string="Responsable" name="group_responsible" context="{'group_by': 'responsible_id'}"/>
                <filter string="Fecha de Adquisición" name="group_date" context="{'group_by': 'acquisition_date'}"/>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_account_asset" model="ir.actions.act_window">
        <field name="name">Activos Fijos</field>
        <field name="res_model">account.asset</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear nuevo activo fijo
            </p>
            <p>
                Registre sus activos fijos y gestione su depreciación automáticamente.
                También puede crear activos desde facturas de compra.
            </p>
        </field>
    </record>

</odoo>

