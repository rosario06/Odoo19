<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form del Wizard de Importación -->
    <record id="view_asset_import_wizard_form" model="ir.ui.view">
        <field name="name">asset.import.wizard.form</field>
        <field name="model">asset.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Activos desde Excel">
                <group>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                    <field name="default_category_id"/>
                </group>
                <div class="alert alert-info" role="alert">
                    <strong>Formato del archivo:</strong><br/>
                    Columna A: Nombre del Activo<br/>
                    Columna B: Código de Categoría<br/>
                    Columna C: Valor de Compra<br/>
                    Columna D: Fecha de Adquisición
                </div>
                <footer>
                    <button name="action_import" string="Importar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_asset_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar Activos</field>
        <field name="res_model">asset.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

