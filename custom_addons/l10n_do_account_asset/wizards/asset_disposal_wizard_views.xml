<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form del Wizard de Baja -->
    <record id="view_asset_disposal_wizard_form" model="ir.ui.view">
        <field name="name">asset.disposal.wizard.form</field>
        <field name="model">asset.disposal.wizard</field>
        <field name="arch" type="xml">
            <form string="Dar de Baja Activo">
                <group>
                    <group>
                        <field name="asset_id"/>
                        <field name="disposal_date"/>
                        <field name="disposal_type"/>
                    </group>
                    <group>
                        <field name="currency_id" invisible="1"/>
                        <field name="sale_value" widget="monetary" invisible="disposal_type != 'sale'"/>
                        <field name="partner_id" invisible="disposal_type != 'sale'"/>
                    </group>
                </group>
                <group>
                    <field name="notes"/>
                </group>
                <footer>
                    <button name="action_dispose_asset" string="Dar de Baja" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n del Wizard -->
    <record id="action_asset_disposal_wizard" model="ir.actions.act_window">
        <field name="name">Dar de Baja Activo</field>
        <field name="res_model">asset.disposal.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

