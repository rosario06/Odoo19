<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista de Formulario del Wizard de Configuración -->
        <record id="view_l10n_do_config_wizard_form" model="ir.ui.view">
            <field name="name">l10n.do.config.wizard.form</field>
            <field name="model">l10n.do.config.wizard</field>
            <field name="arch" type="xml">
                <form string="Configuración Inicial - Localización Dominicana">
                    <group string="Bienvenido al Asistente de Configuración">
                        <div class="alert alert-info" role="alert">
                            <h3>Configuración de República Dominicana</h3>
                            <p>
                                Este asistente le ayudará a configurar rápidamente el módulo de localización 
                                para República Dominicana. Complete los siguientes pasos para comenzar a 
                                facturar con NCF.
                            </p>
                        </div>
                    </group>

                    <separator string="Paso 1: Información de la Empresa"/>
                    <group>
                        <group>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <field name="rnc" placeholder="Ejemplo: 123456789"/>
                        </group>
                        <group>
                            <field name="tax_payer_type"/>
                        </group>
                    </group>

                    <separator string="Paso 2: Configuración de NCF"/>
                    <group>
                        <group>
                            <field name="ncf_expiration_date"/>
                            <field name="configure_ncf_sequences"/>
                        </group>
                    </group>

                    <group invisible="not configure_ncf_sequences">
                        <group string="NCF 01 - Factura de Crédito Fiscal">
                            <field name="ncf_01_from" placeholder="B0100000001" 
                                   required="configure_ncf_sequences"/>
                            <field name="ncf_01_to" placeholder="B0100001000" 
                                   required="configure_ncf_sequences"/>
                        </group>
                        <group string="NCF 02 - Factura de Consumo">
                            <field name="ncf_02_from" placeholder="B0200000001"/>
                            <field name="ncf_02_to" placeholder="B0200001000"/>
                        </group>
                    </group>

                    <group invisible="not configure_ncf_sequences">
                        <div class="alert alert-warning" role="alert">
                            <p>
                                <strong>Importante:</strong> Los rangos de NCF deben ser solicitados y 
                                autorizados por la DGII. Ingrese los rangos exactos que le fueron asignados.
                            </p>
                            <p>
                                Puede configurar más tipos de NCF (03, 04, 11, etc.) después desde 
                                <em>Configuración → Técnico → Secuencias</em>.
                            </p>
                        </div>
                    </group>

                    <separator string="Paso 3: Configuración de Diarios"/>
                    <group>
                        <group>
                            <field name="configure_journals"/>
                            <field name="sale_journal_id" 
                                   invisible="not configure_journals"
                                   required="configure_journals"/>
                        </group>
                        <group>
                            <label for="purchase_journal_id" invisible="not configure_journals"/>
                            <div invisible="not configure_journals">
                                <field name="purchase_journal_id" 
                                       required="configure_journals"/>
                            </div>
                        </group>
                    </group>

                    <group string="Resumen">
                        <div class="alert alert-success" role="alert">
                            <h4>¿Qué configurará este asistente?</h4>
                            <ul>
                                <li>✓ RNC de su empresa</li>
                                <li>✓ Tipo de contribuyente DGII</li>
                                <li>✓ Fecha de vencimiento de NCF</li>
                                <li>✓ Rangos de secuencias NCF (opcional)</li>
                                <li>✓ Diarios de ventas y compras (opcional)</li>
                            </ul>
                            <p>
                                <strong>Después de la configuración</strong>, podrá:
                            </p>
                            <ul>
                                <li>Emitir facturas con NCF automático</li>
                                <li>Configurar clientes y proveedores con RNC/Cédula</li>
                                <li>Generar reportes 606 y 607 para la DGII</li>
                                <li>Aplicar retenciones ITBIS e ISR</li>
                            </ul>
                        </div>
                    </group>
                    
                    <footer>
                        <button string="Configurar" 
                                name="action_configure" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para el Wizard de Configuración -->
        <record id="action_l10n_do_config_wizard" model="ir.actions.act_window">
            <field name="name">Configuración Inicial l10n_do</field>
            <field name="res_model">l10n.do.config.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menú en Configuración -->
        <menuitem id="menu_l10n_do_config" 
                  name="Configuración Localización RD" 
                  parent="account.menu_finance_configuration" 
                  action="action_l10n_do_config_wizard" 
                  sequence="100"
                  groups="base.group_system"/>

    </data>
</odoo>

