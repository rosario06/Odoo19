<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista de Formulario del Wizard de Configuración -->
        <record id="view_l10n_do_config_wizard_form" model="ir.ui.view">
            <field name="name">l10n.do.config.wizard.form</field>
            <field name="model">l10n.do.config.wizard</field>
            <field name="arch" type="xml">
                <form string="Configuración Inicial - Localización Dominicana">
                    <!-- Bienvenida -->
                    <div class="alert alert-info py-3 mb-3" role="alert" style="border-radius: 8px;">
                        <h3 class="mb-2">Configuración de República Dominicana</h3>
                        <p class="mb-0">
                            Este asistente le ayudará a configurar rápidamente el módulo de localización 
                            para República Dominicana. Complete los siguientes pasos para comenzar a 
                            facturar con NCF.
                        </p>
                    </div>

                    <separator string="Paso 1: Información de la Empresa"/>
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label for="rnc_lookup_id" class="fw-bold"/>
                            <field name="rnc_lookup_id" 
                                   placeholder="Escriba el nombre o RNC para buscar en DGII..."
                                   options="{'no_create': True, 'no_open': True}"/>
                            <div class="form-text text-muted">
                                <i class="fa fa-info-circle me-1"/> 
                                Tip: Este buscador emula el autocompletado oficial sin costo de créditos.
                            </div>
                        </div>
                    </div>

                    <group>
                        <group>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <label for="rnc"/>
                            <div class="o_row">
                                <field name="rnc" placeholder="Ejemplo: 101850043" class="oe_inline"/>
                                <button name="action_lookup_rnc" 
                                        type="object" 
                                        string="Verificar RNC" 
                                        class="btn-link oe_inline"
                                        icon="fa-refresh"
                                        help="Refrescar datos desde la DGII usando el RNC"/>
                            </div>
                            <field name="company_name" placeholder="Nombre Legal de la Empresa" required="1"/>
                        </group>
                        <group>
                            <field name="tax_payer_type"/>
                        </group>
                    </group>

                    <separator string="Paso 2: Configuración de NCF"/>
                    <group>
                        <group>
                            <field name="ncf_expiration_date"/>
                            <field name="configure_ncf_sequences"/>
                        </group>
                    </group>

                    <group invisible="not configure_ncf_sequences">
                        <group string="NCF 01 - Factura de Crédito Fiscal">
                            <field name="ncf_01_from" placeholder="B0100000001" 
                                   required="configure_ncf_sequences"/>
                            <field name="ncf_01_to" placeholder="B0100001000" 
                                   required="configure_ncf_sequences"/>
                        </group>
                        <group string="NCF 02 - Factura de Consumo">
                            <field name="ncf_02_from" placeholder="B0200000001"/>
                            <field name="ncf_02_to" placeholder="B0200001000"/>
                        </group>
                    </group>

                    <group invisible="not configure_ncf_sequences">
                        <div class="alert alert-warning" role="alert">
                            <p>
                                <strong>Importante:</strong> Los rangos de NCF deben ser solicitados y 
                                autorizados por la DGII. Ingrese los rangos exactos que le fueron asignados.
                            </p>
                            <p>
                                Puede configurar más tipos de NCF (03, 04, 11, etc.) después desde 
                                <em>Configuración → Técnico → Secuencias</em>.
                            </p>
                        </div>
                    </group>

                    <separator string="Paso 3: Configuración de Diarios"/>
                    <group>
                        <group>
                            <field name="configure_journals"/>
                            <field name="sale_journal_id" 
                                   invisible="not configure_journals"
                                   required="configure_journals"/>
                        </group>
                        <group>
                            <label for="purchase_journal_id" invisible="not configure_journals"/>
                            <div invisible="not configure_journals">
                                <field name="purchase_journal_id" 
                                       required="configure_journals"/>
                            </div>
                        </group>
                    </group>

                    <!-- Resumen -->
                    <div class="alert alert-success py-3" role="alert" style="border-radius: 8px; border-left: 5px solid #28a745;">
                        <h4 class="alert-heading">¿Qué configurará este asistente?</h4>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <ul class="list-unstyled mb-0">
                                    <li><i class="fa fa-check-circle text-success me-2"/> RNC de su empresa</li>
                                    <li><i class="fa fa-check-circle text-success me-2"/> Tipo de contribuyente DGII</li>
                                    <li><i class="fa fa-check-circle text-success me-2"/> Fecha de vencimiento de NCF</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled mb-0">
                                    <li><i class="fa fa-check-circle text-success me-2"/> Rangos de secuencias NCF</li>
                                    <li><i class="fa fa-check-circle text-success me-2"/> Diarios de ventas y compras</li>
                                </ul>
                            </div>
                        </div>
                        <hr/>
                        <p class="mb-1"><strong>Después de la configuración</strong>, podrá:</p>
                        <div class="row">
                            <div class="col-md-6">
                                <small>• Emitir facturas con NCF automático</small><br/>
                                <small>• Configurar clientes/proveedores con RNC</small>
                            </div>
                            <div class="col-md-6">
                                <small>• Generar reportes 606 y 607</small><br/>
                                <small>• Aplicar retenciones ITBIS e ISR</small>
                            </div>
                        </div>
                    </div>
                    
                    <footer>
                        <button string="Configurar" 
                                name="action_configure" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para el Wizard de Configuración -->
        <record id="action_l10n_do_config_wizard" model="ir.actions.act_window">
            <field name="name">Configuración Inicial l10n_do</field>
            <field name="res_model">l10n.do.config.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menú en Configuración -->
        <menuitem id="menu_l10n_do_config" 
                  name="Configuración Localización RD" 
                  parent="account.menu_finance_configuration" 
                  action="action_l10n_do_config_wizard" 
                  sequence="100"
                  groups="base.group_system"/>

    </data>
</odoo>

