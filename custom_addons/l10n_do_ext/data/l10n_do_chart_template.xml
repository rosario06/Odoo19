<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ============================================ -->
        <!-- PLAN CONTABLE PARA REPÚBLICA DOMINICANA     -->
        <!-- Basado en el catálogo de cuentas de la DGII -->
        <!-- Este archivo extiende l10n_do (Odoo 19)     -->
        <!-- ============================================ -->

        <!-- ============================================ -->
        <!-- GRUPOS DE CUENTAS PRINCIPALES               -->
        <!-- Solo se definen si no existen en l10n_do    -->
        <!-- ============================================ -->

        <!-- ACTIVOS (1) -->
        <record id="account_group_activos" model="account.group">
            <field name="name">1 ACTIVOS</field>
            <field name="code_prefix_start">1</field>
            <field name="code_prefix_end">1</field>
        </record>

        <record id="account_group_activos_corrientes" model="account.group">
            <field name="name">11 ACTIVOS CORRIENTES</field>
            <field name="code_prefix_start">11</field>
            <field name="code_prefix_end">11</field>
            <field name="parent_id" ref="account_group_activos"/>
        </record>

        <record id="account_group_activos_no_corrientes" model="account.group">
            <field name="name">12 ACTIVOS NO CORRIENTES</field>
            <field name="code_prefix_start">12</field>
            <field name="code_prefix_end">12</field>
            <field name="parent_id" ref="account_group_activos"/>
        </record>

        <!-- PASIVOS (2) -->
        <record id="account_group_pasivos" model="account.group">
            <field name="name">2 PASIVOS</field>
            <field name="code_prefix_start">2</field>
            <field name="code_prefix_end">2</field>
        </record>

        <record id="account_group_pasivos_corrientes" model="account.group">
            <field name="name">21 PASIVOS CORRIENTES</field>
            <field name="code_prefix_start">21</field>
            <field name="code_prefix_end">21</field>
            <field name="parent_id" ref="account_group_pasivos"/>
        </record>

        <!-- PATRIMONIO (3) -->
        <record id="account_group_patrimonio" model="account.group">
            <field name="name">3 PATRIMONIO</field>
            <field name="code_prefix_start">3</field>
            <field name="code_prefix_end">3</field>
        </record>

        <!-- INGRESOS (4) -->
        <record id="account_group_ingresos" model="account.group">
            <field name="name">4 INGRESOS</field>
            <field name="code_prefix_start">4</field>
            <field name="code_prefix_end">4</field>
        </record>

        <!-- COSTOS (5) -->
        <record id="account_group_costos" model="account.group">
            <field name="name">5 COSTOS DE VENTAS</field>
            <field name="code_prefix_start">5</field>
            <field name="code_prefix_end">5</field>
        </record>

        <!-- GASTOS (6) -->
        <record id="account_group_gastos" model="account.group">
            <field name="name">6 GASTOS</field>
            <field name="code_prefix_start">6</field>
            <field name="code_prefix_end">6</field>
        </record>

        <!-- ============================================ -->
        <!-- NOTA IMPORTANTE                             -->
        <!-- ============================================ -->
        <!-- En Odoo 19, el módulo l10n_do ya proporciona  -->
        <!-- el plan de cuentas base. Este módulo         -->
        <!-- extiende la funcionalidad con NCF, reportes  -->
        <!-- DGII y e-CF. Si necesita cuentas            -->
        <!-- adicionales, créelas manualmente desde la    -->
        <!-- interfaz de Odoo o defínalas aquí como      -->
        <!-- account.account (no templates).              -->
        <!-- ============================================ -->

    </data>
</odoo>

