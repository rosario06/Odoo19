<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Extensión de la vista de formulario de facturas -->
        <record id="view_account_move_form_inherit_ecf" model="ir.ui.view">
            <field name="name">account.move.form.inherit.ecf</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar campos invisibles después de partner_id -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="has_ecf" invisible="1"/>
                    <field name="can_send_ecf" invisible="1"/>
                    <field name="ecf_state" invisible="1"/>
                    <field name="ecf_number" invisible="1"/>
                </xpath>

                <!-- Agregar botones en el header -->
                <xpath expr="//header" position="inside">
                    <button name="action_send_ecf_wizard" string="Enviar e-CF" type="object" 
                            class="oe_highlight" invisible="not can_send_ecf"/>
                    <button name="action_view_ecf_document" string="Ver e-CF" type="object" 
                            invisible="not has_ecf"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
