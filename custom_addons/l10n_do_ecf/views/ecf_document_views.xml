<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista de Formulario de Documentos e-CF -->
        <record id="view_ecf_document_form" model="ir.ui.view">
            <field name="name">ecf.document.form</field>
            <field name="model">ecf.document</field>
            <field name="arch" type="xml">
                <form string="Documento e-CF">
                    <header>
                        <button name="action_generate_xml" string="Generar XML" type="object" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_sign_xml" string="Firmar XML" type="object" 
                                class="oe_highlight" invisible="state not in ['draft', 'to_send'] or not xml_content"/>
                        <button name="action_send_to_dgii" string="Enviar a DGII" type="object" 
                                class="oe_highlight" invisible="state not in ['to_send', 'error']"/>
                        <button name="action_check_status" string="Consultar Estado" type="object" 
                                invisible="state not in ['sent', 'approved']"/>
                        <button name="action_cancel_ecf" string="Anular e-CF" type="object" 
                                invisible="state != 'approved'"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,to_send,sending,sent,approved"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="company_id" invisible="1"/>
                                <field name="invoice_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="document_type"/>
                                <field name="ncf" readonly="1"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="sent_date" readonly="1"/>
                                <field name="approved_date" readonly="1"/>
                                <field name="ecf_number" readonly="1"/>
                                <field name="track_id" readonly="1"/>
                                <field name="security_code" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="XML Contenido" invisible="not xml_content">
                                <field name="xml_content" widget="text"/>
                            </page>
                            <page string="XML Firmado" invisible="not xml_signed">
                                <group>
                                    <field name="xml_signed" filename="xml_signed_filename"/>
                                    <field name="xml_signed_filename" invisible="1"/>
                                </group>
                            </page>
                            <page string="Respuestas DGII">
                                <group>
                                    <group string="Acuse de Recibo" invisible="not acuse_recibo">
                                        <field name="acuse_recibo" widget="text"/>
                                    </group>
                                    <group string="Aprobación Comercial" invisible="not aprobacion_comercial">
                                        <field name="aprobacion_comercial" widget="text"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Código QR" invisible="not qr_code">
                                <field name="qr_code" widget="image"/>
                            </page>
                            <page string="Errores" invisible="not error_message">
                                <group>
                                    <field name="error_code"/>
                                    <field name="error_message"/>
                                    <field name="retry_count"/>
                                </group>
                            </page>
                            <page string="Anulación" invisible="state != 'cancelled'">
                                <group>
                                    <field name="cancellation_reason"/>
                                    <field name="cancellation_date"/>
                                </group>
                            </page>
                            <page string="Historial">
                                <field name="log_ids" readonly="1">
                                    <list>
                                        <field name="date"/>
                                        <field name="event_type"/>
                                        <field name="message"/>
                                        <field name="user_id"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista de Lista de Documentos e-CF -->
        <record id="view_ecf_document_tree" model="ir.ui.view">
            <field name="name">ecf.document.tree</field>
            <field name="model">ecf.document</field>
            <field name="arch" type="xml">
                <list string="Documentos e-CF" sample="1">
                    <field name="name"/>
                    <field name="invoice_id"/>
                    <field name="partner_id"/>
                    <field name="document_type"/>
                    <field name="ncf"/>
                    <field name="ecf_number"/>
                    <field name="date"/>
                    <field name="state" decoration-success="state == 'approved'" 
                           decoration-warning="state in ['sent', 'sending']" 
                           decoration-danger="state in ['rejected', 'error']" 
                           decoration-muted="state == 'cancelled'" 
                           widget="badge"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Vista de Búsqueda de Documentos e-CF - COMENTADA TEMPORALMENTE -->
        <!--
        <record id="view_ecf_document_search" model="ir.ui.view">
            <field name="name">ecf.document.search</field>
            <field name="model">ecf.document</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter name="draft" domain="[('state', '=', 'draft')]"/>
                </search>
            </field>
        </record>
        -->

        <!-- Acción de Documentos e-CF -->
        <record id="action_ecf_document" model="ir.actions.act_window">
            <field name="name">Documentos e-CF</field>
            <field name="res_model">ecf.document</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay documentos e-CF
                </p>
                <p>
                    Los documentos e-CF se crean automáticamente desde las facturas de venta.
                </p>
            </field>
        </record>

    </data>
</odoo>