<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Template de Representación Impresa e-CF -->
        <template id="report_ecf_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 class="text-center">
                                <span>Representación Impresa</span>
                                <br/>
                                <span>Comprobante Fiscal Electrónico (e-CF)</span>
                            </h2>
                            
                            <div class="row mt32 mb32">
                                <div class="col-6">
                                    <strong>e-NCF:</strong> <span t-field="o.ecf_number"/><br/>
                                    <strong>NCF:</strong> <span t-field="o.ncf"/><br/>
                                    <strong>Tipo:</strong> <span t-field="o.document_type"/><br/>
                                    <strong>Fecha:</strong> <span t-field="o.date"/><br/>
                                    <strong>Código de Seguridad:</strong> <span t-field="o.security_code"/><br/>
                                </div>
                                <div class="col-6 text-right">
                                    <img t-if="o.qr_code" t-att-src="'data:image/png;base64,%s' % o.qr_code.decode('utf-8')" 
                                         style="max-width: 150px;"/>
                                </div>
                            </div>

                            <h3>Datos del Emisor</h3>
                            <div class="row">
                                <div class="col-12">
                                    <strong><span t-field="o.company_id.name"/></strong><br/>
                                    <strong>RNC:</strong> <span t-field="o.company_id.vat"/><br/>
                                    <span t-field="o.company_id.street"/><br/>
                                    <span t-field="o.company_id.city"/>, <span t-field="o.company_id.country_id.name"/><br/>
                                    <span t-if="o.company_id.phone">Tel: <span t-field="o.company_id.phone"/></span>
                                </div>
                            </div>

                            <h3 class="mt32">Datos del Receptor</h3>
                            <div class="row">
                                <div class="col-12">
                                    <strong><span t-field="o.partner_id.name"/></strong><br/>
                                    <strong>RNC/Cédula:</strong> <span t-field="o.partner_id.vat"/><br/>
                                    <span t-field="o.partner_id.street"/><br/>
                                    <span t-field="o.partner_id.city"/>
                                </div>
                            </div>

                            <h3 class="mt32">Detalle de Factura</h3>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Descripción</th>
                                        <th class="text-right">Cantidad</th>
                                        <th class="text-right">Precio Unit.</th>
                                        <th class="text-right">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.invoice_id.invoice_line_ids" t-as="line">
                                        <tr>
                                            <td><span t-field="line.name"/></td>
                                            <td class="text-right"><span t-field="line.quantity"/></td>
                                            <td class="text-right"><span t-field="line.price_unit"/></td>
                                            <td class="text-right"><span t-field="line.price_subtotal"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <div class="row justify-content-end">
                                <div class="col-4">
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>Subtotal:</strong></td>
                                            <td class="text-right"><span t-field="o.invoice_id.amount_untaxed"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>ITBIS:</strong></td>
                                            <td class="text-right"><span t-field="o.invoice_id.amount_tax"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Total:</strong></td>
                                            <td class="text-right"><span t-field="o.invoice_id.amount_total"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="mt32 text-center" style="border: 2px solid #000; padding: 10px;">
                                <strong>ESTE DOCUMENTO ES UNA REPRESENTACIÓN IMPRESA DE UN COMPROBANTE FISCAL ELECTRÓNICO</strong><br/>
                                <span>Validación en: https://ecf.dgii.gov.do</span>
                            </div>

                            <div class="mt16 text-center" style="font-size: 10px;">
                                <p>
                                    Estado: <strong><span t-field="o.state"/></strong><br/>
                                    Fecha de Aprobación: <span t-field="o.approved_date"/><br/>
                                    Track ID: <span t-field="o.track_id"/>
                                </p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Definición del Reporte -->
        <record id="action_report_ecf_document" model="ir.actions.report">
            <field name="name">Representación Impresa e-CF</field>
            <field name="model">ecf.document</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_do_ecf.report_ecf_document</field>
            <field name="report_file">l10n_do_ecf.report_ecf_document</field>
            <field name="binding_model_id" ref="model_ecf_document"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>

